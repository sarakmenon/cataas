<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cat API</title>
  <link rel="stylesheet" href="/styles.css">
  <script>
    // Function to fetch a new random cat image
    function fetchNewCat() {
      fetch('https://api.thecatapi.com/v1/images/search')
        .then(response => response.json())
        .then(data => {
          const catImageElement = document.querySelector('.cat-image');
          catImageElement.src = data[0].url;
        })
        .catch(error => {
          console.error('Error fetching cat image:', error);
        });
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Random Cat Image</h1>
    <img src="<%= catImage %>" alt="Random Cat" class="cat-image">
    <p>Here is a cute random cat for you!</p>
    <!-- Button to fetch a new cat image -->
    <button onclick="fetchNewCat()">Get New Cat</button>
  </div>
</body>
</html>
